<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow d-flex flex-column p-0">
            <div class="border-bottom w-100">
                <div class="container d-flex justify-content-between">
                    <p class='m-0 d-flex'><strong class="d-flex align-items-center">WELCOME TO BOOKSTORE</strong></p>
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item" style="margin: 0 18px">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Register">
                                <strong>
                                    REGISTER
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item" style="margin: 0 18px">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">
                                <strong>LOGIN</strong>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex container" style="height: 100px">
                <div class="row w-100">
                    <div class="col-md-3 d-flex">
                        <span class="d-flex align-self-center">
                            <h1 style="font-weight: 600">Nash<strong style="color: green;">Book</strong></h1>
                        </span>
                    </div>
                    <div class="col-md-8" style="margin: auto 0">
                        <ul class="d-flex justify-content-end" style="list-style-type: none; margin: auto 0">
                            <li style="padding: 0 19px"><strong>HOME</strong></li>
                            <li style="padding: 0 19px"><strong>ABOUT US</strong></li>
                            <li style="padding: 0 19px"><strong>PRODUCTS</strong></li>
                            <li style="padding: 0 19px"><strong>SERVICE</strong></li>
                            <li style="padding: 0 19px"><strong>CONTACT US</strong></li>
                        </ul>
                    </div>
                    <div class="col-md-1 d-flex justify-content-end">
                        <i class="bi bi-cart3" style="margin: auto 0; font-size:40px"></i>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CustomerSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>