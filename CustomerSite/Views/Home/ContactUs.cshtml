@{
    ViewData["Title"] = "Contact Us";
}

<partial name="_BreadCrumb.cshtml" />

<main style="background: antiquewhite; padding: 80px;">

    <div class="container" style="height: 100vh">
        <div class="row">
            <div class="col">
                <h1 class='mb-5'>Contact Us</h1>
                <div class='mb-5 d-flex'>
                    <i class="bi bi-geo-alt" style="font-size:26px"></i>
                    <p class='ms-3 mb-0 align-self-center'>Address goes here, street, Crossroad 123.</p>
                </div>
                <div class='mb-5 d-flex'>
                    <i class="bi bi-envelope" style="font-size:26px"></i>
                    <p class='ms-3 mb-0 align-self-center'>info@example.com / info@example.com</p>
                </div>
                <div class='mb-5 d-flex'>
                    <i class="bi bi-phone" style="font-size:26px"></i>
                    <p class='ms-3 mb-0 align-self-center'>+1 35 776 859 000 / +1 35 776 859 011</p>
                </div>
            </div>
            <div class="col">
                <div class="card border-0" style="background: #ffffff">
                    <form class="row g-3 p-5">
                        <div class="col-12 input-group-lg">
                            <input type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="col-12 input-group-lg">
                            <input type="text" class="form-control" placeholder="Email">
                        </div>
                        <div class="col-12 input-group-lg">
                            <input type="text" class="form-control" placeholder="Title">
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                style="height: 100px"></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-dark w-100 btn-hover py-3"
                                style="font-weight: 400">SEND MESSAGE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        .btn-hover:hover {
            background-color: red;
        }
    </style>
</main>