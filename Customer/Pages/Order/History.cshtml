@page
@model OrderHistoryModel
@{
    ViewData["Title"] = "Order History";
}

<h1 class="text-center mt-5">Order History</h1>

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Address</th>
                <th scope="col">Time</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.OrderHistory.Count < 1)
            {
                <tr>
                    <td colspan="3" class="text-center">You have not made any previous orders!</td>
                </tr>
            }
            else
            {
                @foreach (var order in @Model.OrderHistory)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@order.Address</td>
                        <td>@order.Time</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>