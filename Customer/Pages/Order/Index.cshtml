@page
@model OrderModel
@{
    ViewData["Title"] = "Order";
}

<h1 class="text-center mt-5">Your Order</h1>
<p class="text-center">Excepteur sint occaecat cupidatat non proident sunt
    in culpa officia deserunt</p>

<div class="container" style="margin-bottom: 200px;">
    <div class="d-flex justify-content-between">
        <p>You Have 3 Items In Your Cart</p>
        <a asp-page="/Products/Index">Back to Store</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="w-50">PRODUCT</th>
                <th class="w-20">QUANTITY</th>
                <th class="w-20">PRICE</th>
                <th class="w-10"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="d-flex flex-column">
                        <img src="~/images/1.png" style="width: 80px;" alt="">
                        <h6>Name</h6>
                    </div>
                </td>
                <td class="align-middle">
                    <div class="input-group mb-3" style="max-width: 30%">
                        <span class="input-group-text">-</span>
                        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                        <span class="input-group-text bg-success ">+</span>
                    </div>
                </td>
                <td class="align-middle">1 X $7.89</td>
                <td class="align-middle text-end">
                    <i class="bi bi-x" style="font-size: 30px;"></i>
                </td>
            </tr>
            <tr>
                <td class="py-5">Total</td>
                <td colspan="3" class="text-center align-middle fw-bold">$50</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <button class="btn btn-success">Clear Cart</button>
        <button class="btn btn-success">Check Out</button>
    </div>
</div>